<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/searchPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:text="选择职业"
            android:textSize="24.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:layout_marginRight="10.0dip">

            <EditText
                android:id="@+id/search_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="3.0" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:onClick="onClick"
                android:text="取消" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="13.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="12dip">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/bigsortText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="大分类"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/bigsortSpinner"
                    android:layout_width="420dip"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/bigsortText"
                    android:spinnerMode="dropdown"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:text="中分类"
                    android:textSize="20dip" />

                <Spinner
                    android:id="@+id/middlesortSpinner"
                    android:layout_width="420dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:spinnerMode="dropdown"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="13.0dip"
            android:layout_marginTop="12dip">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="10%">

                <TextView
                    android:id="@+id/bigsortTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="大分类"
                    android:textSize="20dip" />

                <View
                    android:layout_width="1.dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="#cecdcd" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="30%">

                <TextView
                    android:id="@+id/middlesortTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="中分类"
                    android:textSize="20dip" />

                <View
                    android:layout_width="1.dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="#cecdcd" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="20%">

                <TextView
                    android:id="@+id/codeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="小分类"
                    android:textSize="20dip" />

                <View
                    android:layout_width="1.dip"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="#cecdcd" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="40%">

                <TextView
                    android:id="@+id/nameTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="职业代码"
                    android:textSize="20dip" />

            </RelativeLayout>


        </com.zhy.android.percent.support.PercentLinearLayout>


        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8.0dip"
            android:layout_marginLeft="17.0dip"
            android:layout_marginRight="14.0dip"
            android:layout_weight="1.0"
            android:divider="#BEC8D1"
            android:dividerHeight="1.0dip"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none"></ListView>


    </com.zhy.android.percent.support.PercentLinearLayout>


</LinearLayout>


